<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50dip" >

    <ImageView
        android:id="@+id/setperson_imageview_01"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:padding="5dip"
        android:scaleType="fitXY" >
    </ImageView>

    <ImageView
        android:id="@+id/setperson_imageview_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:scaleType="fitXY" >
    </ImageView>

    <TextView
        android:id="@+id/setperson_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:layout_toLeftOf="@+id/setperson_imageview_02"
        android:layout_toRightOf="@+id/setperson_imageview_01"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="15sp" />

</RelativeLayout>