        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
          android:layout_below="@id/title_line1"
        android:padding="1.0dip" 
        android:layout_marginLeft="7.0dip" 
       
        android:layout_marginRight="7.0dip"
        android:layout_marginBottom="5.0dip"
        android:orientation="vertical" 
        
        >
        <!-- 第一行 -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/lock1"  android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/lock1Name" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="锁1" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/beginTimeTV" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击进入设置" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:id="@+id/my_divide_line_1" style="@style/line1" />
         <!-- 第二行  -->
         <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/lock2"  android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/lock2Name" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="锁2" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/beginTimeTV" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击进入设置" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:id="@+id/my_divide_line_2" style="@style/line1" />
        <!-- 第三行  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/lock3" android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/lock3Name" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="锁3" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/endTimeTV" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="点击进入设置" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
         </RelativeLayout>
       <View android:id="@+id/my_divide_line_3" style="@style/line1" />
       <!-- 第四行  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/setPhoneNumber" android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置手机号" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/endTimeTV" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="可用手机号解锁加锁程序" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
         </RelativeLayout>
        <View android:id="@+id/my_divide_line_4" style="@style/line1" />
      <!-- 第五行  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/setremind" android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="提前多久提醒" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/remind" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
         </RelativeLayout>
        <View android:id="@+id/my_divide_line_5" style="@style/line1" />
         <!-- 第六行  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/setWifi" android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置wifi不可用时间段" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                     <TextView android:textColor="#ffcccccc" android:id="@+id/remind" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
         </RelativeLayout>
        <View android:id="@+id/my_divide_line_6" style="@style/line1" />
         <!-- 第七行  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/set3g" android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="设置3G不可用时间段" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <ImageView android:id="@+id/image1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    <TextView android:textColor="#ffcccccc" android:id="@+id/remind" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_toLeftOf="@id/image1" android:layout_centerVertical="true" />
         </RelativeLayout>
        <View android:id="@+id/my_divide_line_7" style="@style/line1" />
      <!-- 防止被卸载  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/preventuninstall" android:paddingLeft="13.0dip" android:paddingTop="5.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="锁定系统安装卸载功能" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <CheckBox android:id="@+id/checkbox1" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    
         </RelativeLayout>
       <View android:id="@+id/my_divide_line_8" style="@style/line1" />
       <!-- 防止被卸载加固  -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/addtoDevice" android:paddingLeft="13.0dip" android:paddingTop="5.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/xxxx" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="防卸载加固" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    
                    <CheckBox android:id="@+id/checkbox2" android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:layout_alignParentRight="true" android:layout_centerVertical="true" />
                    
         </RelativeLayout>
       <View android:id="@+id/my_divide_line_9" style="@style/line1" />
    </LinearLayout>
             <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLayout2"
                android:layout_marginLeft="20dip"
                android:padding="10dip"
                android:text="位置服务设置"
                android:textColor="#33B5E5"
                android:textSize="20dip" />

            <View
                android:id="@+id/title_l1"
                style="@style/line2"
                android:layout_below="@id/title3" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/title_l1"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="7.0dip"
                android:layout_marginRight="7.0dip"
                android:orientation="vertical"
                android:padding="1.0dip" >

                <!-- 第一行，足迹上传时间设定 -->

                <RelativeLayout
                    android:id="@+id/updatetime"
                    android:layout_width="fill_parent"
                    android:layout_height="43.0dip"
                    android:background="@drawable/more_activity_item_selector_no_corners"
                    android:clickable="true"
                    android:paddingLeft="13.0dip"
                    android:paddingTop="10.0dip" >

                    <TextView
                        android:id="@+id/textview01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.0dip"
                        android:text="设置足迹上传时间" />

                    <ImageView
                        android:id="@+id/updatetime_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12.0dip"
                        android:src="@drawable/android_list_idex" />

                    <TextView
                        android:id="@+id/updatetiem_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/updatetime_imageview"
                        android:paddingRight="15.0dip"
                        android:text="2分钟" />
                </RelativeLayout>

                <View
                    android:id="@+id/my_divide_line_10"
                    style="@style/line1" />
                <!-- 第二行，显示足迹数量设定 -->

                <RelativeLayout
                    android:id="@+id/showtrack_num"
                    android:layout_width="fill_parent"
                    android:layout_height="43.0dip"
                    android:background="@drawable/more_activity_item_selector_no_corners"
                    android:clickable="true"
                    android:paddingLeft="13.0dip"
                    android:paddingTop="10.0dip" >

                    <TextView
                        android:id="@+id/showtrack_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="15.0dip"
                        android:text="设置足迹显示数量" />

                    <ImageView
                        android:id="@+id/showtrack_num_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="12.0dip"
                        android:src="@drawable/android_list_idex" />

                    <TextView
                        android:id="@+id/showtrack_num_string"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/showtrack_num_imageview"
                        android:paddingRight="15.0dip"
                        android:text="30条" />
                </RelativeLayout>
            </LinearLayout>
            
  </RelativeLayout>
  </ScrollView>
</RelativeLayout>