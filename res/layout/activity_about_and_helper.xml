<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="#ffffffff"
    tools:context=".AboutAndHelperActivity" >
    <cn.duocool.lashou.mywidget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title="关于和帮助" />    
    
     <TextView
         android:id="@+id/title1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/aboutInfo"
         android:layout_marginLeft="20dip"
         android:padding="10dip"
         android:text="帮助&amp;关于"
         android:textColor="#33B5E5"
         android:textSize="20sp" />

      <View android:id="@+id/title_line1" style="@style/line2"   android:layout_below="@id/title1"/>
  <LinearLayout
        android:id="@+id/helpContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/title_line1"
        android:padding="1.0dip" 
        android:layout_marginLeft="7.0dip" 
        android:layout_marginRight="7.0dip"
        android:layout_marginBottom="5.0dip"
        android:orientation="vertical" 
        >
        <!-- 第1行 -->
        <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/softhelp"  android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/lock1Name" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="软件帮助" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    <ImageView   android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
        <View android:id="@+id/my_divide_line_2" style="@style/line1" />
         <!-- 第2行  -->
         <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/contact_usAAA"  android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/lock2Name" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="联系我们" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    <ImageView   android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
		 </RelativeLayout>


        <!-- 第3行 -->
        <View android:id="@+id/lin3" style="@style/line1" />
          <RelativeLayout android:background="@drawable/more_activity_item_selector_no_corners" android:id="@+id/apk_update"  android:paddingLeft="13.0dip" android:paddingTop="10.0dip" android:clickable="true" android:layout_width="fill_parent" android:layout_height="43.0dip">
                    <TextView android:id="@+id/checkUpdate" android:paddingLeft="15.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="检查更新" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
                    <ImageView android:paddingRight="12.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android_list_idex" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

  <LinearLayout
      android:id="@+id/aboutInfo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_below="@+id/titleBar"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="10dp" >

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/lashou100" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#ff666666" />

      <TextView
          android:id="@+id/editionName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="v1.0"
          android:textColor="#ff666666" />

  </LinearLayout>
  
</RelativeLayout>