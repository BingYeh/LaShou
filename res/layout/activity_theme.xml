<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	    android:background="#eeeeee"    
    tools:context=".ThemeActivity" >
	<cn.duocool.lashou.mywidget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title="主题设置" />
	<ScrollView 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/titleBar"
    	>
    <RelativeLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
	    android:id="@+id/relativeLayout1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="100dp"

	    >
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_margin="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/theme_itemStyle"
	        android:orientation="vertical"
	        >
	      <ImageView
	          	android:id="@+id/theme1Img"
	            android:layout_width="96dp"
	            android:layout_height="160dp"
	            android:scaleType="fitXY"	            
	            android:src="@drawable/main_bg"         
	            />
		    <RadioButton
	        	android:id="@+id/theme1_btn"
	       	 	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:textSize="12sp"
	        	android:text="主题一" 
	        	/>
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/linearLayout2"
	        android:layout_margin="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/linearLayout1"
	        android:orientation="vertical"
	        style="@style/theme_itemStyle"
	         >
	        <ImageView
	          	android:id="@+id/theme2Img"	            
	            android:layout_width="96dp"
	            android:layout_height="160dp"
	            android:scaleType="fitXY"	            
	            android:src="@drawable/main_bg" />
		    <RadioButton
	        	android:id="@+id/theme2_btn"
	       	 	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:textSize="12sp"
	        	android:text="主题二" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/linearLayout3"
	        android:layout_margin="20dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_below="@id/linearLayout1" 
	        style="@style/theme_itemStyle"
	        android:orientation="vertical" >
	        <ImageView
	          	android:id="@+id/theme3Img"	            
	            android:layout_width="96dp"
	            android:layout_height="160dp"
	            android:scaleType="fitXY"	            
	            android:src="@drawable/main_bg" />
		    <RadioButton
	        	android:id="@+id/theme3_btn"
	       	 	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:textSize="12sp"
	        	android:text="主题三" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/linearLayout4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/linearLayout3"
	        android:layout_alignTop="@id/linearLayout3"
	        android:layout_alignLeft="@id/linearLayout2"
	        android:orientation="vertical"
	        style="@style/theme_itemStyle"	        
	         >
	        <ImageView
	          	android:id="@+id/theme4Img"	            
	            android:layout_width="96dp"
	            android:layout_height="160dp"
	            android:scaleType="fitXY"	            
	            android:src="@drawable/main_bg" />
		    <RadioButton
	        	android:id="@+id/theme4_btn"
	       	 	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:textSize="12sp"
	        	android:text="主题四" />
	    </LinearLayout>
	    <LinearLayout
	        android:id="@+id/linearLayout5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/linearLayout3"
	        android:layout_alignLeft="@id/linearLayout3"
	        android:orientation="vertical"
	        style="@style/theme_itemStyle"	        
	         >
	        <ImageView
	          	android:id="@+id/theme5Img"	            
	            android:layout_width="96dp"
	            android:layout_height="160dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/main_bg" />
		    <RadioButton
	        	android:id="@+id/theme5_btn"
	       	 	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content" 
	        	android:textSize="12sp"
	        	android:text="自定义" />	        
	        
	    </LinearLayout>
	</RelativeLayout>
</ScrollView>
	
</RelativeLayout>