<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context=".AdvitiseActivity" >

    <cn.duocool.lashou.mywidget.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        title="反馈建议" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBar" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:text="@string/yourContectInfo" />

        <EditText
            android:id="@+id/contectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:ems="10"
            android:hint="@string/yourContectInfoTip"
            android:padding="10dp"
            android:inputType="textPersonName" >
        </EditText>

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/contectTv"
            android:layout_below="@+id/contectTv"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            android:text="内容：" />

        <EditText
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TextView01"
            android:layout_alignRight="@+id/contectTv"
            android:layout_below="@+id/TextView01"
            android:padding="10dp"
            android:gravity="top"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:ems="10"
            android:minLines="5"
            android:inputType="textMultiLine" >
        </EditText>
    </RelativeLayout>

    <Button
        android:id="@+id/btnAdvSub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_button_selector"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="提交"
        android:textColor="@android:color/white" />

</RelativeLayout>